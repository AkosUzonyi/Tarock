<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="text_view">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="player_name">
        <item name="android:textSize">@dimen/player_name_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:text">---</item>
    </style>

    <style name="shadow_text">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">#DDDDDD</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
	</style>

    <style name="red_button" parent="@style/button">
        <item name="android:background">@drawable/red_button_background</item>
    </style>

    <style name="button">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="spinner" parent="@style/button">
        <item name="android:popupBackground">@drawable/button_background</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="player_message">
        <item name="android:textSize">@dimen/player_message_size</item>
        <item name="android:textColor">#000000</item>
	    <item name="android:background">@drawable/player_message_background</item>
    </style>
</resources>
