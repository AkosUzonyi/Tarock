<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:textViewStyle">@style/text_view</item>
        <item name="android:spinnerStyle">@style/spinner</item>
        <item name="android:buttonStyle">@style/button</item>
    </style>

    <style name="text_view" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/normal_text</item>
    </style>

    <style name="player_name">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/player_name_size</item>
        <item name="android:textColor">@color/unknown_team</item>
        <item name="android:text">---</item>
    </style>

    <style name="normal_text">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="game_text">
        <item name="android:textSize">@dimen/game_text_size</item>
        <item name="android:textColor">@color/game_text</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="red_button" parent="@style/button">
        <item name="android:background">@drawable/button_background_red</item>
    </style>

    <style name="button" parent="android:Widget.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="spinner" parent="android:Widget.Spinner">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:popupBackground">@drawable/button_background</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="player_message">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/player_message_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/player_message_background</item>
    </style>
</resources>
