<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tisza.tarock.MainActivity"
    
    android:id="@+id/statistics_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:scrollbars="vertical"
    android:fillViewport="true"
    >
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
	    	
		<LinearLayout    
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal"
		    android:orientation="horizontal"
		    >
		
		    <TextView
		        android:id="@+id/statistics_gamepoints_self"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="16sp"
		        style="@style/shadow_text"
		        />	
		
		    <TextView
		        android:id="@+id/statistics_gamepoints_opponent"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		   	 	android:layout_marginLeft="20dp"
		        android:textSize="16sp"
		        style="@style/shadow_text"
		        />	
		</LinearLayout>
	    
		<LinearLayout
		    android:id="@+id/statistics_self_entries_list"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_marginTop="10dp"
		    android:padding="4dp"
		    >
		</LinearLayout>
	    
		<LinearLayout
		    android:id="@+id/statistics_opponent_entries_list"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_marginTop="5dp"
		    >
		</LinearLayout>
	    
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_marginTop="10dp"
		    >
		
		    <TextView
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.7"
		        android:text="@string/statictics_sum"
		        android:textSize="16sp"
		        style="@style/shadow_text"
		        />	
		
		    <TextView
		        android:id="@+id/statistics_sum_points"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.3"
		        android:textSize="16sp"
		        />	
		</LinearLayout>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="20dp"
		    android:orientation="horizontal"
		    >
		    
		    <TextView
		        android:id="@+id/statistics_points_name_0"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.25"
		        android:textSize="16sp"
		        style="@style/shadow_text"
		    	/>
		    
		    <TextView
		        android:id="@+id/statistics_points_name_1"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.25"
		        android:textSize="16sp"
		        style="@style/shadow_text"
		    	/>
		    
		    <TextView
		        android:id="@+id/statistics_points_name_2"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.25"
		        android:textSize="16sp"
		        style="@style/shadow_text"
		    	/>
		    
		    <TextView
		        android:id="@+id/statistics_points_name_3"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.25"
		        android:textSize="16sp"
		        style="@style/shadow_text"
		    	/>
   		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:orientation="horizontal"
		    >
		    
		    <TextView
		        android:id="@+id/statistics_points_value_0"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.25"
		        android:textSize="16sp"
		        style="@style/shadow_text"
		    	/>
		    
		    <TextView
		        android:id="@+id/statistics_points_value_1"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.25"
		        android:textSize="16sp"
		        style="@style/shadow_text"
		    	/>
		    
		    <TextView
		        android:id="@+id/statistics_points_value_2"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.25"
		        android:textSize="16sp"
		        style="@style/shadow_text"
		    	/>
		    
		    <TextView
		        android:id="@+id/statistics_points_value_3"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.25"
		        android:textSize="16sp"
		        style="@style/shadow_text"
		    	/>
		</LinearLayout>
				
	</LinearLayout>
</ScrollView>