<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statistics_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding"
    android:scrollbars="vertical"
    android:fillViewport="true"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
            
        <LinearLayout    
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            >
        
            <TextView
                android:id="@+id/statistics_gamepoints_self"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="@style/game_text"
                />    
        
            <TextView
                android:id="@+id/statistics_gamepoints_opponent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textAppearance="@style/game_text"
                />    
        </LinearLayout>

        <TextView
            android:id="@+id/statistics_point_multiplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/statistics_margin"
            android:textStyle="italic"
            android:visibility="gone"
            android:textAppearance="@style/game_text"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/statistics_margin"
            android:text="@string/statistics_self"
            android:textStyle="bold"
            android:textAppearance="@style/game_text"
        />

        <LinearLayout
            android:id="@+id/statistics_self_entries_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/statistics_margin"
            android:text="@string/statistics_opponent"
            android:textStyle="bold"
            android:textAppearance="@style/game_text"
        />

        <LinearLayout
            android:id="@+id/statistics_opponent_entries_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/statistics_margin_big"
            >
        
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="@string/statictics_sum"
                android:textStyle="bold"
                android:textAppearance="@style/game_text"
                />    
        
            <TextView
                android:id="@+id/statistics_sum_points"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:textAppearance="@style/game_text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/statistics_margin_big"
            >
            
            <TextView
                android:id="@+id/statistics_points_name_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textAppearance="@style/game_text"
                android:gravity="center"
                />
            
            <TextView
                android:id="@+id/statistics_points_name_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textAppearance="@style/game_text"
                android:gravity="center"
                />
            
            <TextView
                android:id="@+id/statistics_points_name_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textAppearance="@style/game_text"
                android:gravity="center"
                />
            
            <TextView
                android:id="@+id/statistics_points_name_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textAppearance="@style/game_text"
                android:gravity="center"
                />
           </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/statistics_margin"
            android:orientation="horizontal"
            >
            
            <TextView
                android:id="@+id/statistics_points_value_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textAppearance="@style/game_text"
                android:gravity="center"
                />
            
            <TextView
                android:id="@+id/statistics_points_value_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textAppearance="@style/game_text"
                android:gravity="center"
                />
            
            <TextView
                android:id="@+id/statistics_points_value_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textAppearance="@style/game_text"
                android:gravity="center"
                />
            
            <TextView
                android:id="@+id/statistics_points_value_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textAppearance="@style/game_text"
                android:gravity="center"
                />
        </LinearLayout>

        <include
            android:id="@+id/statistics_chat_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/statistics_margin_big"
            layout="@layout/chat_edit_text"
        />
    </LinearLayout>
</ScrollView>
