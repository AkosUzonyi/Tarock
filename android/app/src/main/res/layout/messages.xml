<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messages_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/messages_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/default_padding"
        android:baselineAligned="false"
        >
        <ScrollView
            android:id="@+id/messages_scroll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:scrollbars="vertical"
            android:fillViewport="true"
            >
            <TextView
                android:id="@+id/messages_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/shadow_text"
                />
        </ScrollView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:scrollbars="vertical"
            android:fillViewport="true"
            >
            <LinearLayout
                android:id="@+id/available_actions"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </ScrollView>
    </LinearLayout>


    <ScrollView
        android:id="@+id/ultimo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/ultimo_back_buton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin"
                android:text="@string/back"
                style="@style/button"
                />
            <LinearLayout
                android:id="@+id/ultimo_spinner_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/button_margin"
                />
            <Button
                android:id="@+id/ultimo_announce_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin"
                android:text="@string/announce"
                />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
